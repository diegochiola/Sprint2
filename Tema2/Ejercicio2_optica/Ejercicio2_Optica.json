        }
    },
    {
        $unwind: '$detalles_cliente'  
    },
    {
        $unwind: '$detalles_gafa'  
    },
    {
        $unwind: '$detalles_proveedor'  
    },
    {
        $project: {
            _id: 0,
            marca_gafa: '$detalles_gafa.marca',
            tipo_montura: '$detalles_gafa.tipo_montura',
            nombre_proveedor: '$detalles_proveedor.nombre',
